{
  "name": "vantoozz/strings",
  "license": "MIT",
  "type": "library",
  "description": "Strings OOP Library",
  "authors": [
    {
      "name": "Ivan Nikitin",
      "email": "vantoozz@gmail.com"
    }
  ],
  "require": {
    "php": "~7|~8",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "~6|~8|~9"
  },
  "autoload": {
    "psr-4": {
      "Vantoozz\\Strings\\": [
        "src/"
      ]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Vantoozz\\Strings\\": [
        "tests/"
      ]
    },
    "files": [
      "support/str.php",
      "support/Stringable.php"
    ]
  },
  "config": {
    "preferred-install": "dist"
  },
  "scripts": {
    "post-install-cmd": [
      "bash .githooks/setup.sh"
    ],
    "post-update-cmd": [
      "bash .githooks/setup.sh"
    ]
  }
}
